<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>0.3.0</Version>
    <Copyright>(c) BlueRedSky LTD. All rights reserved.</Copyright>
    <Authors>Raffaello Bertini</Authors>
    <Company>BlueRedSky LTD</Company>
  <Description>PowerDir is a Powershell 7 Module as an alternative to Get-ChildItem.</Description>
  <GenerateDocumentationFile>True</GenerateDocumentationFile>
  <PackageReadmeFile>README.md</PackageReadmeFile>
  <PackageTags>PowerShell, PowerShell7, Get-ChildItem, Color</PackageTags>
  <AssemblyName>$(MSBuildProjectName)</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="6.0.0" />
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="7.2.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="doc\" />
  </ItemGroup>
<!--
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="COPY /Y $(ProjectDir)PowerDir.GetPowerDir.psd1 $(OutDir)" />
  </Target>
-->
    
  <Target Name="CopyFiles" AfterTargets="PostBuildEvent">
    <ItemGroup>
      <MySourceFiles Include="$(ProjectDir)PowerDir.GetPowerDir.psd1" />
    </ItemGroup>
    <Copy SourceFiles="@(MySourceFiles)" DestinationFolder="$(OutDir)" />
  </Target>

  <Target Name="CopyFiles" AfterTargets="PostBuildEvent" Condition="'$(Configuration)' == 'Release'">
    <ItemGroup>
      <MySourceFiles Include="$(ProjectDir)doc/Get-PowerDir.md;$(ProjectDir)PowerDir.GetPowerDir.psd1;$(ProjectDir)PowerDir.dll-help.xml;$(OutDir)PowerDir.dll;" />
    </ItemGroup>
    <Copy SourceFiles="@(MySourceFiles)" DestinationFolder="$(OutDir)$(MSBuildProjectName).GetPowerDir" />
  </Target>

  <ItemGroup>
    <InternalsVisibleTo Include="PowerDir.Tests" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>

</Project>
